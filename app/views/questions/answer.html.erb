<!-- app/views/layouts/application.html.erb -->

<!DOCTYPE html>
<html>
  <head>
    <title>Lazy Coaching</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <h1>The Lazy Coach</h1> <!-- Add this -->
      <%= yield %>
      <div class="box">
        <strong><%= @question %></strong>
        <br>
        <br>
        <em><%= @answer %></em>
      </div>
      <br>
      <%= link_to "Ask a new question", ask_path %>
    </div>
    <p>A very simple footer</p>  <!-- Add this -->
  </body>
</html>
